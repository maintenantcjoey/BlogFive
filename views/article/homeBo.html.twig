{% extends "baseBo.html.twig" %}

{% block body %}

    <div class="container">

        <h2 class="d-flex justify-content-center">Gestion des articles</h2>

        <div class="row justify-content-between">
            {% for post in posts%}
            <div class="col mt-5">
                <div class="card mb-3" style="width: 17rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{post.title}}</h5>
                        <p class="card-text">{{post.chapo}}</p>
                        <a href="/post/{{post.id}}" class="btn btn-warning">Mofidier</a>
                        <a href="/post/{{post.id}}" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
                </div>
            {% endfor%}
        </div>

    </div>
{% endblock %}